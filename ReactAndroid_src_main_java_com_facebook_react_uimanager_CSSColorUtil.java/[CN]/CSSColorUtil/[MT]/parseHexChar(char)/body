{
  if (hexChar >= '0' && hexChar <= '9') {
    return hexChar - '0';
  }
 else   if (hexChar >= 'A' && hexChar <= 'F') {
    return hexChar - 'A' + 10;
  }
 else   if (hexChar >= 'a' && hexChar <= 'f') {
    return hexChar - 'a' + 10;
  }
  throw new JSApplicationIllegalArgumentException("Invalid hex character: " + hexChar);
}
