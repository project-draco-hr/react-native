{
  UIManagerModule uiManager=getUIManagerModule();
  ReactRootView rootView=createText(uiManager,SimpleMap.of(ViewProps.FONT_WEIGHT,"bold",ViewProps.FONT_STYLE,"italic"),SimpleMap.of(ReactTextShadowNode.PROP_TEXT,"test text"));
  CustomStyleSpan customStyleSpan=getSingleSpan((TextView)rootView.getChildAt(0),CustomStyleSpan.class);
  assertThat(customStyleSpan.getStyle() & Typeface.ITALIC).isNotZero();
  assertThat(customStyleSpan.getWeight() & Typeface.BOLD).isNotZero();
}
