{
  int childrenCount=viewGroup.getChildCount();
  for (int i=childrenCount - 1; i >= 0; i--) {
    View child=viewGroup.getChildAt(i);
    if (child.getParent() != null && child.getGlobalVisibleRect(mVisibleRect)) {
      if (eventX >= mVisibleRect.left && eventX <= mVisibleRect.right && eventY >= mVisibleRect.top && eventY <= mVisibleRect.bottom) {
        View targetView=findTouchTargetViewWithPointerEvents(eventX,eventY,child);
        if (targetView != null) {
          return targetView;
        }
      }
    }
  }
  return viewGroup;
}
