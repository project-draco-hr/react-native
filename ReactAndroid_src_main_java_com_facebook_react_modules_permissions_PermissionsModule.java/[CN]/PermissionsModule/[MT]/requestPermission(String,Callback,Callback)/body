{
  PermissionAwareActivity activity=getPermissionAwareActivity();
  if (Build.VERSION.SDK_INT < Build.VERSION_CODES.M) {
    successCallback.invoke(permission,activity.checkPermission(permission,Process.myPid(),Process.myUid()) == PackageManager.PERMISSION_GRANTED);
    return;
  }
  if (activity.checkSelfPermission(permission) == PackageManager.PERMISSION_GRANTED) {
    successCallback.invoke(permission,true);
    return;
  }
  mCallbacks.put(mRequestCode,new Callback(){
    @Override public void invoke(    Object... args){
      successCallback.invoke(permission,args[0].equals(PackageManager.PERMISSION_GRANTED));
    }
  }
);
  activity.requestPermissions(new String[]{permission},mRequestCode,this);
  mRequestCode++;
}
