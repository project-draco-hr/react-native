{
  int flagsToSet=0;
  if (KEYBOARD_TYPE_NUMERIC.equalsIgnoreCase(keyboardType)) {
    flagsToSet=InputType.TYPE_CLASS_NUMBER;
  }
 else   if (KEYBOARD_TYPE_EMAIL_ADDRESS.equalsIgnoreCase(keyboardType)) {
    flagsToSet=InputType.TYPE_TEXT_VARIATION_EMAIL_ADDRESS;
  }
  updateStagedInputTypeFlag(view,InputType.TYPE_CLASS_NUMBER | InputType.TYPE_TEXT_VARIATION_EMAIL_ADDRESS,flagsToSet);
}
