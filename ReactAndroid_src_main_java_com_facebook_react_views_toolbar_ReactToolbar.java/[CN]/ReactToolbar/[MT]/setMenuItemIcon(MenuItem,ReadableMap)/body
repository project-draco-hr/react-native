{
  String iconSource=icon.getString("uri");
  DraweeHolder<GenericDraweeHierarchy> holder=DraweeHolder.create(createDraweeHierarchy(),getContext());
  DraweeController controller=Fresco.newDraweeControllerBuilder().setUri(Uri.parse(iconSource)).setControllerListener(new ActionIconControllerListener(item,holder)).setOldController(holder.getController()).build();
  holder.setController(controller);
  mActionsHolder.add(holder);
}
