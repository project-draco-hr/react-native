{
  try {
    mUri=Uri.parse(mSource);
    if (mUri.getScheme() == null) {
      mUri=null;
    }
  }
 catch (  Exception e) {
  }
  if (mUri == null) {
    mUri=ResourceDrawableIdHelper.getInstance().getResourceDrawableUri(getContext(),mSource);
    mIsLocalImage=true;
  }
 else {
    mIsLocalImage=false;
  }
}
