{
  if (!shouldNotify) {
    mControllerListener=null;
  }
 else {
    final EventDispatcher mEventDispatcher=((ReactContext)getContext()).getNativeModule(UIManagerModule.class).getEventDispatcher();
    mControllerListener=new BaseControllerListener<ImageInfo>(){
      @Override public void onSubmit(      String id,      Object callerContext){
        mEventDispatcher.dispatchEvent(new ImageLoadEvent(getId(),SystemClock.nanoTime(),ImageLoadEvent.ON_LOAD_START));
      }
      @Override public void onFinalImageSet(      String id,      @Nullable final ImageInfo imageInfo,      @Nullable Animatable animatable){
        if (imageInfo != null) {
          mEventDispatcher.dispatchEvent(new ImageLoadEvent(getId(),SystemClock.nanoTime(),ImageLoadEvent.ON_LOAD));
          mEventDispatcher.dispatchEvent(new ImageLoadEvent(getId(),SystemClock.nanoTime(),ImageLoadEvent.ON_LOAD_END));
        }
      }
      @Override public void onFailure(      String id,      Throwable throwable){
        mEventDispatcher.dispatchEvent(new ImageLoadEvent(getId(),SystemClock.nanoTime(),ImageLoadEvent.ON_ERROR));
        mEventDispatcher.dispatchEvent(new ImageLoadEvent(getId(),SystemClock.nanoTime(),ImageLoadEvent.ON_LOAD_END));
      }
    }
;
  }
  mIsDirty=true;
}
